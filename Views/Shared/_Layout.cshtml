<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] NavJyoti Foundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/About.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NGO_HubConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        .footer-icons i {
            margin-top: 20px;
            margin-right: 10px;
            padding: 0.5rem;
            background: #fff;
            color: #888888;
            border-radius: 50px;
            margin-bottom: 30px;
        }

       .footer-icons i:hover {
                background: #888888;
                color: #fff;
                transition: 0.6s;
                cursor: pointer;
       }
    </style>
</head>
<body>
    <header>
        @* Navbar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/image/logo.png" alt=""  />
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" style="margin-left: 15px; font-weight:bold;">NavJoyti</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Ngo" asp-action="Index">Community</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Donor" asp-action="DonorBase">Donation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Event" asp-action="Index">Events</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact us</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AdminBase">Service</a>
                            </li>
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="min-height:90vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Footer *@
    <footer class="border-top footer text-muted" style=" width:100%; min-height: 100px;">
        <div class="container-fluid text-white py-4" id="footer-div">
            <div class="container">
                <div class="row">
                    <div class='col-lg-3 col-sm-4 col-12'>
                        <h5 class="my-2">Follow NavJoyti</h5>
                        <div class='footer-icons'>
                            <i class="fab fa-facebook"></i>
                            <i class="fa-brands fa-x-twitter"></i>
                            <i class="fab fa-instagram"></i>
                            <i class="fab fa-youtube"></i>
                        </div>
                    </div>
                    <div class="col-lg-2 col-sm-4 col-12">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    About the Portal
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Site Map
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-sm-4 col-12">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Link to us
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    FAQs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Linking Policy
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-sm-4 col-12">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Terms of Use
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Help
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Contact Us
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Copyright Policy
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12 my-2 my-sm-0">
                        <h5>You can visit us</h5>
                        <p class="my-2">
                            NGOHubConnect
                            161 B/4, 3rd Floor, Gulmohar House, Yusuf Sarai Community Centre New Delhi - 110049 Delhi, India
                            <br />
                            Contact Us: Tel: +91-11-43123700
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <footer class="border-top footer text-muted" style="height:10px;">
            <div class="container" style="display:flex; justify-content:center; height:10px; margin-top: 7px;">
                &copy; 2024 Navjyoti India Foundation <a asp-area="" asp-controller="Home" asp-action="Privacy"><span>&nbsp</span>Privacy Policy</a>
            </div>
        </footer>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
